<hr>
<div style="width: 100%; overflow-x: scroll;">
    {{#empty}}
        <div class="alert alert-warning">
            <i class="fa fa-warning"></i>
            {{#str}} emptyresults, block_forum_report {{/str}}
        </div>
    {{/empty}}
    {{^empty}}
        <table class="table table-sm table-bordered table-hover">
            <thead>
                <tr class="bg-primary text-white">
                    {{#headers}}<th>{{.}}</th>{{/headers}}
                    <th>{{#str}} action {{/str}}</th>
                </tr>
            </thead>
            <tbody>
                {{#rows}}
                    <tr>
                        {{#records}}
                            <td>{{.}}</td>
                        {{/records}}
                        <td>
                            <a href="{{{reporturl}}}" title="{{#str}} viewcompletereport, block_forum_report {{/str}}">
                                {{#str}} view {{/str}}
                            </a>
                        </td>
                    </tr>
                {{/rows}}
            </tbody>
        </table>
    {{/empty}}
</div>
