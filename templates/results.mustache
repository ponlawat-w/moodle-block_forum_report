<hr>
<div style="width: 100%; overflow-x: scroll;">
    {{#empty}}
        <div class="alert alert-warning">
            <i class="fa fa-warning"></i>
            {{#str}} emptyresults, block_forum_report {{/str}}
        </div>
    {{/empty}}
    {{^empty}}
        <a id="results">
        <table class="table table-sm table-bordered table-hover">
            <thead>
                <tr class="bg-primary text-white">
                    {{#headers}}
                        <th>
                            <a href="{{{sorturl}}}" class="text-white">
                                {{name}}
                                {{#icon}}
                                    <i class="fa {{icon}}"></i>
                                {{/icon}}
                            </a>
                        </th>
                    {{/headers}}
                    <th>{{#str}} completereport, block_forum_report {{/str}}</th>
                </tr>
            </thead>
            <tbody>
                {{#rows}}
                    <tr>
                        {{#records}}
                            <td>{{.}}</td>
                        {{/records}}
                        <td>
                            <a href="{{{reporturl}}}" target="_blank">
                                {{#str}} view {{/str}}
                            </a>
                        </td>
                    </tr>
                {{/rows}}
            </tbody>
        </table>
    {{/empty}}
</div>
